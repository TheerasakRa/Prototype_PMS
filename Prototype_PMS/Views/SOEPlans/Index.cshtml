@model IEnumerable<Prototype_PMS.Models.SOEPlan>
<div class="col d-flex justify-content-end align-items-center">
    <div class="p-3">
        <a href="@Url.Action("RecycleBin", "SOEPlans")" class="btn btn-outline-warning btn-radius">กล่องขยะ</a>
    </div>
    <div>
        <a href="@Url.Action("Create", "SOEPlans")" class="btn btn-outline-success btn-radius">เพิ่ม</a>
    </div>
</div>
<br />

<table class="table table-striped table-primary">
    <thead>
        <tr>
            <th scope="col" class="text-center">@Html.DisplayNameFor(model => model.First().UpdateDate)</th>
            <th scope="col" class="text-center">@Html.DisplayNameFor(model => model.First().StartEndYear)</th>
            <th scope="col" class="text-center">@Html.DisplayName("จัดการ")</th>
        </tr>
    </thead>

    <tbody class="table table-striped text-bg-light">
        @foreach (var item in Model)
        {
            if (item.isDelete != null)
            {
                <tr class=" text-center">
                    <td>@Html.DisplayFor(modelItem => item.UpdateDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.StartEndYear)</td>
                    <td>
                        <div class="btn-group" role="group">
                            @Html.ActionLink("แก้ไข", "Edit", new { id = item.ID }, new { @class = "btn btn-outline-warning" })
                            @Html.ActionLink("วัตถุประสงค์เชิงยุทธศาสตร์", "Index", "StrategicObjectives", new { SOEPlanID = item.ID, name = item.StartEndYear }, new { @class = "btn btn-outline-info" })
                            @Html.ActionLink("ประวัติการแก้ไข", "Details", new { id = item.ID }, new { @class = "btn btn-outline-secondary " })
                            @Html.ActionLink("ลบ", "Delete", new { id = item.ID }, new { @class = "btn btn-outline-danger", onclick = "return confirm('Are you sure you want to delete?');" })
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
