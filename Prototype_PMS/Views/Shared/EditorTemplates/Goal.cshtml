@model Prototype_PMS.Models.Goal

@Html.HiddenFor(m => m.isDelete)
@Html.HiddenFor(m => m.isLastDelete)
@Html.HiddenFor(m => m.CreateDate)
@Html.HiddenFor(m => m.UpdateDate)
@Html.HiddenFor(m => m.ID)
@Html.HiddenFor(m => m.isDeleteForm)
@Html.HiddenFor(m => m.IsAddIndicator)
@Html.HiddenFor(m => m.StrategicObjectiveID)


@if (Model.isDelete != true)
{
    <tr style="border: 2px solid #000; ">
        <th>
            @Html.TextAreaFor(model => model.Goal1, 3, 50, new { @class = "border", style = "width: 100%; border: 0; max-width: 100% !important; padding: 0;" })
        </th>
        <td>
            <fieldset>
                <div class="col d-flex justify-content-end align-items-center">
                    <input class="btn btn-primary" type="submit" onclick="AddSEOPlanIndicator(@Html.IdFor(m => m.IsAddIndicator))" value="เพิ่ม" />
                </div>
                <br />
            </fieldset>
            <table class="table table-striped table-primary " style="max-width:500px;">
                <tr>
                    <th>
                        @Html.DisplayName("ตัวชี้วัด")
                    </th>
                    <th>
                        @Html.DisplayName("หน่วยวัด")
                    </th>
                    <th>
                        @Html.DisplayName("จัดการ")
                    </th>
                </tr>
                @Html.EditorFor(m => m.SOEPlanIndicators)
            </table>
        </td>
        <td><input value="ลบ" type="submit" class="btn btn-danger" onclick="Deleted(@Html.IdFor(m => m.isDeleteForm));" /></td>

    </tr>
}
else
{
    @Html.HiddenFor(m => m.Goal1)
}