@model Prototype_PMS.Models.ImportantIndicatorTargetMeasuerment

@{
    bool IsDisabled = ViewBag.Disable;
}
@Html.HiddenFor(m => m.ID)
@Html.HiddenFor(m => m.IndicatorID)
@Html.HiddenFor(m => m.IndicatorLevel)
@Html.HiddenFor(m => m.CreateDate)
@Html.HiddenFor(m => m.UpdateDate)
@Html.HiddenFor(m => m.isDelete)
@Html.HiddenFor(m => m.IndicatorLevel)

@if (IsDisabled)
{
    @Html.HiddenFor(m => m.Target)
    @Html.EditorFor(m => m.Target, new { HtmlAttributes = new { type = "number", step = "any", disabled = "disabled" }, style = "width: 120px;" })
}
else
{
    @Html.EditorFor(m => m.Target, new { HtmlAttributes = new { type = "number", step = "any" }, style = "width: 120px;" })
}